<% @page_title="Pages List" %>
<%= link_to("<< Back to Subject List", {:controller => 'subjects', :action=> 'list'}, :class => 'back-link') %>
<div class="page list">
  <h2>Pages</h2>
  <%= link_to("Add New Page", {:action=>'new', :subject_id => @subject.id}, :class=>'button') %><br /> <br />

  <table class="listing" summary="Page list">
    <thead>

    <tr class="header">
      <th>Position</th>
      <th>Page</th>
      <th>Visibility</th>
      <th>Permalink</th>
      <th>Subject</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @pages.each do |page| %>

        <tr class="<%= cycle('odd', 'even') %>">
          <td><%= page.position %></td>
          <td><%= page.name %></td>
          <td class="center"><%= status_tag(page.visible) %></td>
          <td class="center"><%= page.permalink %></td>
          <td class="center"><%= page.subject_id %></td>
          <td class="actions">
<%= link_to("View Sections", {:controller =>'sections', :action => 'list',:page_id => page.id}, :class => 'button') %>
            <%= link_to("Show", {:action=>'show', :id=>page.id,:subject_id=>@subject.id}, :class=>'button') %>
            <%= link_to("Edit", {:action=>'edit', :id=>page.id, :subject_id=>@subject.id}, :class=> 'button') %>
            <%= link_to("Delete", {:action=>'delete', :id=>page.id, :subject_id=>@subject.id}, :class=> 'button') %>
          </td>
        </tr>

    <% end %>
    </tbody>
  </table>
<div class="pluralizenote"><%= pluralize(@pages.size, 'page') %> found</div>
</div>