<% @page_title="Page Details" %>

<%= link_to("<< Back to Pages List", {:action=>'list',:subject_id=>@subject.id}, :class=>'back-link') %>

<div class="page show">
  <h2>Show Page</h2>

  <table summary="Page detail view">
    <tbody>

    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visibility</th>
      <td><%= @page.visible ? 'true' :'false' %></td>
    </tr>
    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Subject</th>
      <td><%= @page.subject_id %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>
    </tbody>
  </table>
</div>