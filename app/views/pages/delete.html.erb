<% @page_title="Delete Page" %>
<%= link_to("<< Back to Pages List", {:action => 'list', :subject_id=>@subject.id},:class => 'back-link') %>

<div class="page delete">
<h2>Delete Page</h2>
  <%= form_for(:page, :url => {:action => 'destroy', :id => @page.id, :subject_id=>@subject.id}) do |f| %>
      <p class="smallcaps">Are you sure you want to permanently delete this page?</p>

      <p class="reference-name"><%= @page.name %></p>

      <div class="button-container">
        <%= submit_tag("Delete Page") %>
      </div>
      </div>
  <% end %>