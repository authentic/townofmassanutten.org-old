<% @page_title="Delete Subject" %>
<%= link_to("<< Back to Menu", {:controller => 'access', :action=> 'menu'}, :class => 'back-link') %>
<%= link_to("<< Back to Subjects List", {:action => 'list'}, :class => 'back-link') %>
<div class="subject delete">
  <h2>Delete Subject</h2>
  <%= form_for(:subject, :url => {:action => 'destroy', :id=> @subject.id}) do |f| %>
      <p class="smallcaps">Are you sure you want to permanently delete this subject?</p>

      <p class="reference-name"><%= @subject.name %></p>

      <div class="button-container">
        <%= submit_tag("Delete Subject") %>
      </div>
      </div>
  <% end %>