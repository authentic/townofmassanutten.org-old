<%= error_messages_for(@section) %>

     <div class="container"><%= f.label(:page_id, "Page")%>
     <%= f.select(:page_id, @pages.collect {|p| [p.name, p.id]}) %></div>
     <div class="container"><%= f.label(:name)%>
     <%= f.text_field(:name) %></div>
     <div class="container"><%= f.label(:position)%>
     <%= f.select(:position, 1..@section_count) %></div>
     <div class="container"><%= f.label(:visible)%>
     <%= f.check_box(:visible) %></div>
     <div class="container"><%= f.label(:content_type)%>
     <%= f.radio_button(:content_type, 'text') %> Text
       <hr>
     <%= f.radio_button(:content_type, 'HTML') %> HTML</div>

     <div class=""><%= f.label(:content)%>
     <%= f.cktext_area(:content, :toolbar=>'Full', :width=>'100%', :height=>'400px',:swf_params => { :assetable_type => 'Test', :assetable_id => 1 })%></div>
