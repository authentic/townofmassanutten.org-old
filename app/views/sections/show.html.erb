<% @page_title="Section Details" %>

<%= link_to("<< Back to Sections List", {:action=>'list', :page_id => @page.id}, :class=>'back-link') %>

<div class="section show">
  <h2>Show Section</h2>

  <table summary="Section detail view">
    <tbody></tbody>
    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Visibility</th>
      <td><%= @section.visible ? 'true' :'false' %></td>
    </tr>
    <tr>
      <th>Page_id</th>

        <td><%= @section.page_id %></td>
    </tr>

    <tr>
      <th>Content type</th>
      <td><%= @section.content_type %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @section.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @section.updated_at %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @section.content.html_safe %></td>
    </tr>
    </tbody>
  </table>
</div>